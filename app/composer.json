{
  "require": {
    "slim/slim": "^4.1",
    "php": ">= 7.4",
    "nyholm/psr7": "^1.2",
    "nyholm/psr7-server": "^0.4.1",
    "ext-json": "*",
    "php-di/php-di": "^6.0",
    "ext-pdo": "*",
    "php-di/slim-bridge": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "phpstan/phpstan": "^0.9.2",
    "squizlabs/php_codesniffer": "3.*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "scripts/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  }
}
